---
export const prerender = false;
import Layout from '../layouts/Layout.astro';
import { actions } from 'astro:actions';

const result = Astro.getActionResult(actions.sendEmail);
---

<Layout>
	<div class="min-h-screen bg-[var(--color-background)] py-12 px-4 sm:px-6 lg:px-8">
		<div class="max-w-md mx-auto">
			<div class="text-center mb-8">
				<h1 class="text-3xl font-bold text-[var(--color-text-primary)] mb-2">Contact Me</h1>
				{result?.data ? (
					<div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
						<div class="flex items-center">
							<svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
								<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
							</svg>
							<span class="font-medium">Success!</span>
						</div>
						<p class="mt-1">Your message has been sent successfully. We'll get back to you soon!</p>
					</div>
				) : (
					<p class="text-[var(--color-text-secondary)]">Get in touch with any questions or comments</p>
				)}
			</div>
			
			<form class="space-y-6 bg-[var(--color-surface)] p-8 rounded-lg shadow-lg" action={actions.sendEmail} method="POST">
				<div>
					<label for="name" class="block text-sm font-medium text-[var(--color-text-primary)] mb-2">
						Name
					</label>
					<input
						type="text"
						id="name"
						name="name"
						required
						class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-[var(--color-accent)] focus:border-transparent bg-white text-gray-900"
						placeholder="Your name"
					/>
				</div>
				
				<div>
					<label for="email" class="block text-sm font-medium text-[var(--color-text-primary)] mb-2">
						Email
					</label>
					<input
						type="email"
						id="email"
						name="email"
						required
						class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-[var(--color-accent)] focus:border-transparent bg-white text-gray-900"
						placeholder="your.email@example.com"
					/>
				</div>
				
				<div>
					<label for="message" class="block text-sm font-medium text-[var(--color-text-primary)] mb-2">
						Question / Comment
					</label>
					<textarea
						id="message"
						name="message"
						rows="4"
						required
						class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-[var(--color-accent)] focus:border-transparent bg-white text-gray-900 resize-vertical"
						placeholder="Your question or comment..."
					></textarea>
				</div>
				
				<div>
					<button
						type="submit"
						class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-[var(--color-accent)] hover:bg-[var(--color-highlight)] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[var(--color-accent)] transition-colors duration-200"
					>
						Send Message
					</button>
				</div>
			</form>
		</div>
	</div>
</Layout>